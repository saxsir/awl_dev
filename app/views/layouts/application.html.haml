!!!
%html
  %head
    %title AwlDev
    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }
    = csrf_meta_tags
    = stylesheet_link_tag "application", :media => "all"
    = yield :head
  %body{:id => @body_id, :class => "preview", "data-offset" => "50", "data-spy" => "scroll", "data-target" => ".subnav"}
    = render 'layouts/fb-root'
    %header
      #navigation
        .navbar.navbar-fixed-top
          .navbar-inner
            .container
              %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
                %span.icon-bar
                %span.icon-bar
                %span.icon-bar
              = link_to 'AWL', root_path, :class => 'brand'
              .nav-collapse
                %ul.nav.pull-right
                  %li.divider-vertical
                  %li>
                    = link_to 'About', about_path
                  %li.divider-vertical
                  %li>
                    = link_to 'Projects', projects_path
                  %li.divider-vertical

                  -if user_signed_in?
                    %li>
                      = link_to 'Mypage', mypage_index_path(:username => current_user.username)
                    %li.divider-vertical
                    %li>
                      = link_to 'Logout', destroy_user_session_path, :method => :delete
                  -else
                    %li>
                      %a#nav_login{"data-toggle" => "popver"} Login

                    %li.divider-vertical
                    %li>
                      = link_to 'Signup', new_user_registration_path
                  %li.divider-vertical
    = yield :page_title
    .container.main
      = render :partial => "layouts/flash_messages", :locals => {:flash => flash}
      = yield
    = render 'layouts/footer'
    = javascript_include_tag "application"
    = yield :javascript
