    #project-desc
      %h4>
        = "クリエイター名：" + @project.user.username
      %p{"jg" => "jTruncSubstr", "jg:jTruncSubstr" => "length:140, moreText:'もっと見る', lessText:'閉じる', lessAni:0"}
