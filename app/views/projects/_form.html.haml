= form_for(@project) do |f|
  - if @project.errors.any?
    #error_explanation
      %h2
        = pluralize(@project.errors.count, "error")
        prohibited this project from being saved:
      %ul
        - @project.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :headline
    %br/
    = f.text_field :headline
  .field
    = f.label :url
    %br/
    = f.text_field :url
  .field
    = f.label :target_amount
    %br/
    = f.number_field :target_amount
  .field
    = f.label :deadline
    %br/
    = f.datetime_select :deadline
    %br/
  .actions
    = f.submit
