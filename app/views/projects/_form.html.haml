= form_for(@project) do |f|
  - if @project.errors.any?
    #error_explanation
      %h2
        = pluralize(@project.errors.count, "error")
        prohibited this project from being saved:
      %ul
        - @project.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :user_id
    %br/
    = f.number_field :user_id
  .field
    = f.label :url
    %br/
    = f.text_field :url
  .field
    = f.label :target_amount
    %br/
    = f.number_field :target_amount
  .field
    = f.label :total_amount
    %br/
    = f.number_field :total_amount
  .field
    = f.label :payment_tag
    %br/
    = f.text_area :payment_tag
  .actions
    = f.submit
