- @body_id = "project-new"
= content_for :page_title do
  %h2.page-title プロジェクト作成

#new_page_1
  .row-fluid
    .span8.well
      = simple_form_for @project do |f|
        %h5 プロジェクトタイトル
        = f.input :title,:label => false,:input_html => {:class => "span8"}
        %h5 カテゴリ
        = f.input :category,:label => false,:input_html => {:class => "span8"}
        %h5 プロジェクト内容
        = f.input :description,:label => false,:input_html => {:class => "span8",:rows => 4}
        %h5 サムネイル画像
        .inline
          = f.input :image,:label => false, :input_html => {:class => "span8",accept: ('image/*')}
        %br
        %h5 目標金額
        .upload
          = f.input :target_amount,:label => false,:input_html => {:class => "span7"}
        %h5 募集期間
        %input.number.span6
        %h5 募集締め切り(入力フォームの提案です)
        = f.input :deadline ,:label => false, as: :ui_date_picker

        %h5 クリエイター情報(審査段階で利用させて頂きます)
        .inline
          .span1
            twitter
          .span10.offset1
            = f.url_field :twitter, :class => "span5"
        .inline
          .span1
            Facebook
          .span10.offset1
            = f.url_field :facebook, :class => "span5"
        .inline
          .span2
            Webサイト
          .span10
            = f.url_field :web_site, :class => "span5"


    .span4.well
      %h4 サムネイル画像
      =image_tag('http://cambelt.co/720x480/No+Image')
      %hr
      .span12#amount
        .inline
          現在の支援額
          .pull-right
            目標支援額
            %strong#target
              ¥20,000
        %h2= "¥20,000"
        %hr
        .span12#support-data
          .span6
            パートナー
            - partner = 0
            %h2.pull-right= "#{partner}人"
          .span6
            残り
            %h2.pull-right#left-days 00日
      .span12#progress
        %hr
        .progress.progress-striped.active
          .bar(style='width:52%;')
        .inline
          達成率
          %strong
            52%

  .row-fluid
    .span8
      .span4
      .span4
        %button.btn.btn-inverse.btn-large 戻る
        %button.btn.btn-success.btn-large#nextButton-new 次のページへ
      .span4
    .span4

#new_page_2
  .row-fluid
    .span8.well
      %h5 リワード入力
    .span4.well
